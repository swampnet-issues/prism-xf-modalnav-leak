<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestModalNav.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Orientation="Vertical">
        <Label Text="Welcome to Xamarin Forms and Prism!" />
        <Button Command="{Binding NavigateCommand}" Margin="20" Text="Navigate"/>
        <Button Command="{Binding NavigateModalCommand}" Margin="20" Text="Navigate / Modal"/>
    </StackLayout>

</ContentPage>